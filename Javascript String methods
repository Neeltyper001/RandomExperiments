let str = "This is a string"
console.log(str.toUpperCase()) // doesn't change the original string while converting to the upper case
console.log(str.toLowerCase()) // doesn't change the original string while converting to the lower case
console.log(str.substring(1,3)) // returns the substring... 1st args  is included while second args is excluded
console.log(str.indexOf("his")) // returns the index of the substring the index no. is usually of the first character of the substring

console.log(str.charAt(3)) // returns the character of the index

console.log(str.charCodeAt(8)) // returns the ascii code of the character

console.log(str.replace(" is "," was ")) // replace the string

console.log(str.split(" ")) //  splitting the string into arrays of string

console.log(str.lastIndexOf("is")) // returns the last index of the substring

console.log(str)
